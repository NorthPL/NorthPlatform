<?xml version="1.0" encoding="UTF-8" ?>
<gui height="5" title="@window_title">
	<container pos="0,0" size="1,5">
		<background id="STAINED_GLASS_PANE" data="11" />
	</container>
	<container pos="8,0" size="1,5">
		<background id="STAINED_GLASS_PANE" data="11" />
	</container>
    <container pos="1,0" size="7,5">
        <content>

            <button pos="3,0">
            	<icon id="minecraft:iron_chestplate" name="@title" />
            </button>
            
            <button pos="0,2">
            	<icon id="minecraft:clock" name="@loadingtime.name$color" lore="@loadingtime.lore$color,count,max"/>
            	<metadata key="guiName" value="rycerz_czas" />
            	<metadata key="folder" value="true" />
            	<metadata key="item1" value="knight.loadingtime:1" />
            	<metadata key="item2" value="knight.loadingtime:2" />
            	<metadata key="item3" value="knight.loadingtime:3" />
            	<metadata key="item4" value="knight.loadingtime:4" />
            	<metadata key="item5" value="knight.loadingtime:5" />
            	<onClick>open</onClick>
            </button>
            
            <button pos="2,2">
            	<icon id="minecraft:iron_boots" name="@boots.name$color" lore="@boots.lore$color,status,price" />
            	<metadata key="item" value="knight.boots" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="3,2">
            	<icon id="minecraft:leather_leggings" name="@leggings1.name$color" lore="@leggings1.lore$color,status,price"/>
            	<metadata key="item" value="knight.leggings:1" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="4,2">
            	<icon id="minecraft:chainmail_leggings" name="@leggings2.name$color" lore="@leggings2.lore$color,status,price"/>
            	<metadata key="item" value="knight.leggings:2" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="5,2">
            	<icon id="minecraft:iron_chestplate" name="@chestplate.name$color" lore="@chestplate.lore$color,status,price"/>
            	<metadata key="item" value="knight.chestplate:1" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="6,2">
            	<icon id="minecraft:planks" name="@budulec.name$color" lore="@budulec.lore$color,count,max" />
            	<metadata key="guiName" value="rycerz_budulec" />
            	<metadata key="folder" value="true" />
            	<metadata key="item1" value="knight.budulec:1" />
            	<metadata key="item2" value="knight.budulec:2" />
            	<metadata key="item3" value="knight.budulec:3" />
            	<onClick>open</onClick>
            </button>
            
            <button pos="6,4">
            	<icon id="minecraft:iron_door" name="@return" />
            	<metadata key="guiName" value="main" />
            	<onClick>open</onClick>
            </button>
        </content>
    </container>
</gui>