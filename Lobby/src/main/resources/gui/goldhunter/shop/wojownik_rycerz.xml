<?xml version="1.0" encoding="UTF-8" ?>
<gui height="5" title="@main.window_title">
	<container pos="0,0" size="1,5">
		<background id="STAINED_GLASS_PANE" data="14" />
	</container>
	<container pos="8,0" size="1,5">
		<background id="STAINED_GLASS_PANE" data="14" />
	</container>
    <container pos="1,0" size="7,5">
        <content>

            <button pos="3,0">
            	<icon id="DIAMOND_CHESTPLATE" name="@main.wojownik.rycerz.name$color" />
            </button>
            
            <button pos="1,2">
            	<icon id="DIAMOND_CHESTPLATE" name="@buy.wojownik.rycerz.name$color" lore="@buy.wojownik.rycerz.lore$color,price,status" />
            	<metadata key="item" value="class.warrior.knight" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="3,2">
            	<icon id="WATCH" name="@wojownik.rycerz.timefolder.name$color" lore="@wojownik.rycerz.timefolder.lore$color,count,max"/>
            	<metadata key="guiName" value="wojownik_rycerz_czas" />
            	<metadata key="folder" value="true" />
            	<metadata key="item1" value="warrior.knight.time:1" />
            	<metadata key="item2" value="warrior.knight.time:2" />
            	<metadata key="item3" value="warrior.knight.time:3" />
            	<onClick>open</onClick>
            </button>
            
            <button pos="4,2">
            	<icon id="IRON_CHESTPLATE" name="@wojownik.rycerz.helmet1.name$color" lore="@wojownik.rycerz.helmet1.lore$color,status,price"/>
            	<metadata key="item" value="warrior.knight.ironchest" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="5,2">
            	<icon id="WOOD" name="@wojownik.rycerz.budulecfolder.name$color" lore="@wojownik.rycerz.budulecfolder.lore$color,count,max" />
            	<metadata key="guiName" value="wojownik_rycerz_budulec" />
            	<metadata key="folder" value="true" />
            	<metadata key="item1" value="warrior.knight.budulec:1" />
            	<metadata key="item2" value="warrior.knight.budulec:2" />
            	<metadata key="item3" value="warrior.knight.budulec:3" />
            	<onClick>open</onClick>
            </button>
            
            <button pos="6,4">
            	<icon id="minecraft:iron_door" name="@main.return" />
            	<metadata key="guiName" value="wojownik" />
            	<onClick>open</onClick>
            </button>
        </content>
    </container>
</gui>