<?xml version="1.0" encoding="UTF-8" ?>
<gui height="5" title="@window_title">
	<container pos="0,0" size="1,5">
		<background id="STAINED_GLASS_PANE" data="11" />
	</container>
	<container pos="8,0" size="1,5">
		<background id="STAINED_GLASS_PANE" data="11" />
	</container>
    <container pos="1,0" size="7,5">
        <content>

            <button pos="3,0">
            	<icon id="minecraft:cobblestone" name="@title" />
            </button>
            
            <button pos="0,2">
            	<icon id="minecraft:clock" name="@loadingtime.name$color" lore="@loadingtime.lore$color,count,max"/>
            	<metadata key="guiName" value="obronca_czas" />
            	<metadata key="folder" value="true" />
            	<metadata key="item1" value="defender.loadingtime:1" />
            	<metadata key="item2" value="defender.loadingtime:2" />
            	<metadata key="item3" value="defender.loadingtime:3" />
            	<onClick>open</onClick>
            </button>
            
            <button pos="1,2">
            	<icon id="minecraft:iron_boots" name="@boots1.name$color" lore="@boots1.lore$color,status,price" />
            	<metadata key="item" value="defender.boots" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="2,2">
            	<icon id="minecraft:diamond_boots" name="@boots2.name$color" lore="@boots2.lore$color,status,price" />
            	<metadata key="item" value="defender.boots:2" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="3,2">
            	<icon id="minecraft:iron_chestplate" name="@chestplate1.name$color" lore="@chestplate1.lore$color,status,price"/>
            	<metadata key="item" value="defender.chestplate:1" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="4,2">
            	<icon id="minecraft:diamond_chestplate" name="@chestplate2.name$color" lore="@chestplate2.lore$color,status,price"/>
            	<metadata key="item" value="defender.chestplate:2" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="5,2">
            	<icon id="minecraft:golden_sword" name="@sword.name$color" lore="@sword.lore$color,status,price"/>
            	<metadata key="item" value="defender.sword:1" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="6,2">
            	<icon id="minecraft:planks" name="@budulec.name$color" lore="@budulec.lore$color,count,max" />
            	<metadata key="guiName" value="obronca_budulec" />
            	<metadata key="folder" value="true" />
            	<metadata key="item1" value="defender.budulec:1" />
            	<metadata key="item2" value="defender.budulec:2" />
            	<metadata key="item3" value="defender.budulec:3" />
            	<onClick>open</onClick>
            </button>
            
            <button pos="6,4">
            	<icon id="minecraft:iron_door" name="@return" />
            	<metadata key="guiName" value="main" />
            	<onClick>open</onClick>
            </button>
        </content>
    </container>
</gui>