<?xml version="1.0" encoding="UTF-8" ?>
<gui height="5" title="@window_title">
	<container pos="0,0" size="1,5">
		<background id="STAINED_GLASS_PANE" data="4" />
	</container>
	<container pos="8,0" size="1,5">
		<background id="STAINED_GLASS_PANE" data="4" />
	</container>
    <container pos="1,0" size="7,5">
        <content>

            <button pos="3,0">
            	<icon id="minecraft:magma_cream" name="@title" />
            </button>
            
            <button pos="1,2">
            	<icon id="minecraft:clock" name="@loadingtime.name$color" lore="@loadingtime.lore$color,count,max"/>
            	<metadata key="guiName" value="szaman_czas" />
            	<metadata key="folder" value="true" />
            	<metadata key="item1" value="shaman.loadingtime:1" />
            	<metadata key="item2" value="shaman.loadingtime:2" />
            	<metadata key="item3" value="shaman.loadingtime:3" />
            	<metadata key="item4" value="shaman.loadingtime:4" />
            	<metadata key="item5" value="shaman.loadingtime:5" />
            	<onClick>open</onClick>
            </button>
            
            <button pos="3,2">
            	<icon id="minecraft:golden_chestplate" name="@chestplate.name$color" lore="@chestplate.lore$color,status,price"/>
            	<metadata key="item" value="shaman.chestplate" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="5,2">
            	<icon id="minecraft:planks" name="@budulec.name$color" lore="@budulec.lore$color,count,max" />
            	<metadata key="guiName" value="szaman_budulec" />
            	<metadata key="folder" value="true" />
            	<metadata key="item1" value="shaman.budulec:1" />
            	<metadata key="item2" value="shaman.budulec:2" />
            	<metadata key="item3" value="shaman.budulec:3" />
            	<metadata key="item4" value="shaman.budulec:4" />
            	<metadata key="item5" value="shaman.budulec:5" />
            	<onClick>open</onClick>
            </button>
            
            <button pos="6,4">
            	<icon id="minecraft:iron_door" name="@return" />
            	<metadata key="guiName" value="main" />
            	<onClick>open</onClick>
            </button>
        </content>
    </container>
</gui>