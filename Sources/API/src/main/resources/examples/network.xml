<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!-- Ogolna konfiguracja sieci, trzymana w kontrolerze sieci -->
<network>
    <!-- Kto może wchodzić na serwer. Dostępne: EVERYONE, ONLY_ADMIN, NOBODY -->
    <joiningPolicy>EVERYONE</joiningPolicy>

    <!-- Wyświetlana maksymalna ilość graczy -->
    <displayMaxPlayers>1000</displayMaxPlayers>

    <!-- Wiadomość na liście serwerów -->
    <serverListMotd>Network Platform by NorthPL93</serverListMotd>

    <!-- Tekst wyświetlany jako wersja serwera -->
    <serverListVersion>1.12</serverListVersion>

    <!-- Domyślna grupa serwerów z którą zostanie połączony gracz -->
    <defaultServersGroup>default</defaultServersGroup>
</network>