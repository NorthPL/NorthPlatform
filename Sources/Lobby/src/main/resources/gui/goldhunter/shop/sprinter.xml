<?xml version="1.0" encoding="UTF-8" ?>
<gui height="5" title="@window_title">
	<container pos="0,0" size="1,5">
		<background id="STAINED_GLASS_PANE" data="4" />
	</container>
	<container pos="8,0" size="1,5">
		<background id="STAINED_GLASS_PANE" data="4" />
	</container>
    <container pos="1,0" size="7,5">
        <content>

            <button pos="3,0">
            	<icon id="minecraft:leather_boots" name="@title" />
            </button>
            
            <button pos="1,2">
            	<icon id="minecraft:clock" name="@loadingtime.name$color" lore="@loadingtime.lore$color,count,max"/>
            	<metadata key="guiName" value="sprinter_czas" />
            	<metadata key="folder" value="true" />
            	<metadata key="item1" value="sprinter.loadingtime:1" />
            	<metadata key="item2" value="sprinter.loadingtime:2" />
            	<metadata key="item3" value="sprinter.loadingtime:3" />
            	<metadata key="item4" value="sprinter.loadingtime:4" />
            	<metadata key="item5" value="sprinter.loadingtime:5" />
            	<onClick>open</onClick>
            </button>
            
            <button pos="2,2">
            	<icon id="minecraft:chainmail_boots" name="@boots.name$color" lore="@boots.lore$color,status,price"/>
            	<metadata key="item" value="sprinter.boots" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="4,2">
            	<icon id="minecraft:leather_leggings" name="@leggings.name$color" lore="@leggings.lore$color,status,price"/>
            	<metadata key="item" value="sprinter.leggings:1" />
            	<onClick>buy</onClick>
            </button>
            
            <button pos="5,2">
            	<icon id="minecraft:planks" name="@budulec.name$color" lore="@budulec.lore$color,count,max" />
            	<metadata key="guiName" value="sprinter_budulec" />
            	<metadata key="folder" value="true" />
            	<metadata key="item1" value="sprinter.budulec:1" />
            	<metadata key="item2" value="sprinter.budulec:2" />
            	<metadata key="item3" value="sprinter.budulec:3" />
            	<onClick>open</onClick>
            </button>
            
            <button pos="6,4">
            	<icon id="minecraft:iron_door" name="@return" />
            	<metadata key="guiName" value="main" />
            	<onClick>open</onClick>
            </button>
        </content>
    </container>
</gui>