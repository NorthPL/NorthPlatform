<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<bundle>
    <components>
        <component>
            <name>API.Economy</name>
            <mainClass>pl.north93.zgame.api.economy.impl.client.EconomyComponent</mainClass>
            <description>Provides API for accessing economy.</description>
            <packages>
                <package>pl.north93.zgame.api.economy.impl.client</package>
                <package>pl.north93.zgame.api.economy.impl.shared</package>
            </packages>
            <dependencies>
                <dependency>API.Database.Redis.Observer</dependency>
                <dependency>API.MinecraftNetwork.NetworkManager</dependency>
            </dependencies>
            <platforms>
                <platform>BUKKIT</platform>
                <platform>BUNGEE</platform>
            </platforms>
        </component>

        <component>
            <name>API.Economy.VaultConnector</name>
            <!-- powoduje bledy gdy nie ma zainstalowanego Vaulta. Na razie nie potrzebujemy vault. -->
            <enabled>false</enabled>
            <mainClass>pl.north93.zgame.api.economy.impl.server.EconomyServerComponent</mainClass>
            <description>Connects economy API with Vault.</description>
            <dependencies>
                <dependency>API.Economy</dependency>
            </dependencies>
            <platforms>
                <platform>BUKKIT</platform>
            </platforms>
        </component>

        <component>
            <name>API.Economy.Controller</name>
            <mainClass>pl.north93.zgame.api.economy.impl.netcontroller.EconomyControllerComponent</mainClass>
            <description>Exposes config in the network.</description>
            <packages>
                <package>pl.north93.zgame.api.economy.impl.netcontroller</package>
                <package>pl.north93.zgame.api.economy.impl.shared</package>
            </packages>
            <dependencies>
                <dependency>API.Database.Redis.Observer</dependency>
                <dependency>API.MinecraftNetwork.NetworkManager</dependency>
                <dependency>RestfulApi</dependency>
            </dependencies>
            <platforms>
                <platform>STANDALONE</platform>
            </platforms>
        </component>
    </components>
</bundle>