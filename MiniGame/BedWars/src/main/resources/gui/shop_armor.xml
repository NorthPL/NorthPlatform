<?xml version="1.0" encoding="UTF-8" ?>
<gui height="3" title="@item.armor.window_title">
    <container pos="0,0" size="9,3">
        <border id="0" data="0" />
        <background id="0" data="0" />
        <content>
            <!-- Chainmal -->
            <button pos="3,1">
                <variable name="itemNameColor" value="northplatform://minigame/bedwars/shop/nameColor/armor.chainmal/$playerId"/>
                <variable name="itemLore" value="northplatform://minigame/bedwars/shop/lore/armor.chainmal/$playerId"/>
                <icon id="CHAINMAIL_BOOTS" data="0" name="@item.armor.chainmal.name$itemNameColor" lore="@gui.lore_placeholder$itemLore"/>
                <onClick>northplatform://minigame/bedwars/shop/buy/armor.chainmal/$playerId</onClick>
            </button>

            <!-- Iron -->
            <button pos="4,1">
                <variable name="itemNameColor" value="northplatform://minigame/bedwars/shop/nameColor/armor.iron/$playerId"/>
                <variable name="itemLore" value="northplatform://minigame/bedwars/shop/lore/armor.iron/$playerId"/>
                <icon id="IRON_BOOTS" data="0" name="@item.armor.iron.name$itemNameColor" lore="@gui.lore_placeholder$itemLore"/>
                <onClick>northplatform://minigame/bedwars/buy/armor.iron/$playerId</onClick>
            </button>

            <!-- Diamond -->
            <button pos="5,1">
                <variable name="itemNameColor" value="northplatform://minigame/bedwars/shop/nameColor/armor.diamond/$playerId"/>
                <variable name="itemLore" value="northplatform://minigame/bedwars/shop/lore/armor.diamond/$playerId"/>
                <icon id="DIAMOND_BOOTS" data="0" name="@item.armor.diamond.name$itemNameColor" lore="@gui.lore_placeholder$itemLore"/>
                <onClick>northplatform://minigame/bedwars/buy/armor.diamond/$playerId</onClick>
            </button>

            <!-- back button -->
            <button pos="8,2">
                <icon id="ARROW" data="0" name="@gui.shop.back_button_name"/>
                <onClick>northplatform://minigame/bedwars/shopCategory/main/$playerId</onClick>
            </button>
        </content>
    </container>
</gui>