<?xml version="1.0" encoding="UTF-8" ?>
<class>
	<displayName>@supplier</displayName>
	<lore>@supplier.lore</lore>
	
	<icon id="minecraft:dropper" />
	
	<!-- <shopItem>supplier.access</shopItem> -->

	<rewards>
		<kill>2</kill>
		<assist>3.5</assist>
		<chestDestroy>50</chestDestroy>
		<specialAbility>2</specialAbility>
	</rewards>
	
	<specialAbility type="SUPPLIER">
		<loading ifbuyed="suplier.loadingtime:3" seconds="30" />
		<loading ifbuyed="suplier.loadingtime:2" seconds="35" />
		<loading ifbuyed="suplier.loadingtime:1" seconds="40" />
		<loading seconds="45" />
	</specialAbility>
		
	<equipment>
		<chestplate>
			<item ifbuyed="supplier.chestplate" id="minecraft:iron_chestplate" />
			<item id="minecraft:chainmail_chestplate" />
		</chestplate>
		
		<leggings>
			<item ifbuyed="supplier.leggings" id="minecraft:leather_leggings" />
		</leggings>
				
		<boots>
			<item id="minecraft:chainmail_boots" /> 
		</boots>
		
		<inv slot="0" >
			<item id="minecraft:wooden_sword" />
		</inv>
	<!-- SIEKIERA -->
		<inv slot="1" >
			<item id="minecraft:iron_axe" />
		</inv>
	<!-- KILOF -->		
		<inv slot="2" >
			<item id="minecraft:diamond_pickaxe" />
		</inv>		
	<!-- BUDULEC -->		
		<inv slot="8" >
			<item ifbuyed="supplier.budulec:5" id="minecraft:planks" count="50" />
			<item ifbuyed="supplier.budulec:4" id="minecraft:planks" count="45" />
			<item ifbuyed="supplier.budulec:3" id="minecraft:planks" count="40" />
			<item ifbuyed="supplier.budulec:2" id="minecraft:planks" count="35" />
			<item ifbuyed="supplier.budulec:1" id="minecraft:planks" count="30" />
			<item id="minecraft:planks" count="25" />
		</inv>
		
	</equipment>
</class>