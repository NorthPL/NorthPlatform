<?xml version="1.0" encoding="UTF-8" ?>
<class>
	<!-- @nazwa_klasy.nazwa_podklasy -->
	<displayName>@medic.healer</displayName>
	<!-- @nazwa_klasy -->
	<shortName>@medic</shortName>
	<!-- @nazwa_klasy -->
	<lore>@medic.healer.lore</lore>
	
	<!-- KLASA PODSTAWOWA -->
	
	<specialAbility>SIRENS_TEARS</specialAbility>
	
	<equipment>
		<chestplate>
			<item id="minecraft:golden_chestplate" /> 
		</chestplate>
		
		<leggings>
			<item id="minecraft:leather_leggings" /> 
		</leggings>
				
		<boots>
			<!-- <item ifbuyed="medic.healer.goldbenoots" id="minecraft:golden_boots" /> -->
			<item id="minecraft:leather_boots" /> 
		</boots>
		
		<inv slot="0" >
			<item id="minecraft:golden_sword" />
		</inv>
		
		<inv slot="1" >
			<!-- potka rzucana lecząca w liczbie 3,4,5 ulepszenie
			1 potka/30s wypełnia sie do wykupionej granicy w sklepie która jest równa startowej ilości potek-->
		</inv>
	
		<inv slot="2" >
			<item id="" /> <!-- potka pitna regeneracji 0:45 w liczbie 1 brak odnowienia-->
		</inv>
	<!-- SIEKIERA -->
		<inv slot="3" >
			<item id="minecraft:iron_axe" />
		</inv>
	<!-- KILOF -->		
		<inv slot="4" >
			<item id="minecraft:diamond_pickaxe" />
		</inv>		
	<!-- BUDULEC -->		
		<inv slot="8" >
			<item ifbuyed="medic.healer.budulec:3" id="minecraft:planks" count="40" />
			<item ifbuyed="medic.healer.budulec:2" id="minecraft:planks" count="35" />
			<item ifbuyed="medic.healer.budulec:1" id="minecraft:planks" count="30" />
			<item id="minecraft:planks" count="25" />
		</inv>
		
	</equipment>
	
	<invRefilRule>MEDYK_POLOWY</invRefilRule>
	<invRefilTime>600</invRefilTime>
</class>