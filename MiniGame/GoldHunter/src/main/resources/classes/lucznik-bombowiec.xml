<?xml version="1.0" encoding="UTF-8" ?>
<class>
	<displayName>@archer_bomb</displayName>
	<lore>@archer_bomb.lore</lore>

	<icon id="minecraft:tipped_arrow">
		<potionMeta>
			<potionData type="INSTANT_HEAL" />
		</potionMeta>
	</icon>
            	
    <!-- <shopItem>archer_bomb.access</shopItem> -->
    
	<specialAbility type="BOMB_ARROW">
		<loading ifbuyed="archer_bomb.loadingtime:3" seconds="30" />
		<loading ifbuyed="archer_bomb.loadingtime:2" seconds="35" />
		<loading ifbuyed="archer_bomb.loadingtime:1" seconds="40" />
		<loading seconds="45" />
	</specialAbility>
	
	<equipment>
		<chestplate>
			<item id="minecraft:leather_chestplate" /> 
		</chestplate>
		
		<boots>
			<item ifbuyed="archer_bomb.boots" id="minecraft:iron_boots" />
		</boots>
		
		<inv slot="0" >
			<item id="minecraft:wooden_sword" />
		</inv>

		<inv slot="1" >
			<item ifbuyed="archer_bomb.punchbow" id="minecraft:bow">
				<enchants>
					<enchant enchantment="ARROW_DAMAGE" level="1" />
				</enchants>
			</item>
			<item id="minecraft:bow" />
		</inv>		
	<!-- SIEKIERA -->
		<inv slot="2" >
			<item id="minecraft:iron_axe" />
		</inv>
	<!-- KILOF -->		
		<inv slot="3" >
			<item id="minecraft:diamond_pickaxe" />
		</inv>		
	<!-- BUDULEC -->		
		<inv slot="8" >
			<item ifbuyed="archer_bomb.budulec:3" id="minecraft:planks" count="30" />
			<item ifbuyed="archer_bomb.budulec:2" id="minecraft:planks" count="25" />
			<item ifbuyed="archer_bomb.budulec:1" id="minecraft:planks" count="20" />
			<item id="minecraft:planks" count="15" />
		</inv>
	</equipment>
	
	<invRefilRule maxCount="3" period="50" id="minecraft:arrow" />

</class>