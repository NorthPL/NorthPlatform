<?xml version="1.0" encoding="UTF-8" ?>
<class>
	<!-- @nazwa_klasy.nazwa_podklasy -->
	<displayName>@archer.bomb</displayName>
	<!-- @nazwa_klasy -->
	<shortName>@archer</shortName>
	<!-- @nazwa_klasy -->
	<lore>@archer.bomb.lore</lore>

	<!-- KLASA DODATKOWA -->
	<icon id="minecraft:tipped_arrow">
		<potionMeta>
			<potionData type="INSTANT_HEAL" />
		</potionMeta>
	</icon>
            	
    <shopItem>class.archer.bomb</shopItem>
    
	<specialAbility>BOMB_ARROW</specialAbility>
	
	<equipment>
		<chestplate>
			<item ifbuyed="archer.bomb.chainchest" id="minecraft:chainmail_chestplate" />
			<item id="minecraft:leather_chestplate" /> 
		</chestplate>
		
		<leggings>
			<item id="minecraft:iron_leggings" /> 
		</leggings>
		
		<boots>
			<!-- <item ifbuyed="archer.bomb.boots" id="minecraft:leather_boots" /> -->
		</boots>
		
		<inv slot="0" >
			<item id="minecraft:wooden_sword" />
		</inv>

		<inv slot="1" >
			<item ifbuyed="archer.bomb.punchbow" id="minecraft:bow" />
			<item id="minecraft:bow" />
		</inv>		
	<!-- SIEKIERA -->
		<inv slot="2" >
			<item id="minecraft:iron_axe" />
		</inv>
	<!-- KILOF -->		
		<inv slot="3" >
			<item id="minecraft:diamond_pickaxe" />
		</inv>		
	<!-- BUDULEC -->		
		<inv slot="8" >
			<item ifbuyed="archer.bomb.budulec:3" id="minecraft:planks" count="35" />
			<item ifbuyed="archer.bomb.budulec:2" id="minecraft:planks" count="30" />
			<item ifbuyed="archer.bomb.budulec:1" id="minecraft:planks" count="25" />
			<item id="minecraft:planks" count="20" />
		</inv>
	</equipment>
	
	<invRefilRule>LUCZNIK</invRefilRule>
	<invRefilTime>50</invRefilTime>
</class>