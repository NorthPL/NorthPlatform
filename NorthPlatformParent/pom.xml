<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <properties>
        <spigot.location>${basedir}/../lib/spigot-1.10.2.jar</spigot.location>

        <bungee-api.version>1.10-SNAPSHOT</bungee-api.version>

        <mongodb.version>3.3.0</mongodb.version>

        <version.api>1.0-INDEV</version.api>
        <version.api.defaultcommands>1.0-INDEV</version.api.defaultcommands>
        <version.lobby>1.0-INDEV</version.lobby>
        <version.controller>1.0-INDEV</version.controller>
        <version.daemon>1.0-INDEV</version.daemon>
        <version.pets>1.0-INDEV</version.pets>

        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <modules>
        <module>../API</module>
        <module>../Lobby</module>
        <module>../Network Controller</module>
        <module>../Pets</module>
        <module>../Server Deamon</module>
    </modules>

    <repositories>
        <repository>
            <id>bungeecord-repo</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </repository>
    </repositories>

    <groupId>pl.north93.zgame</groupId>
    <artifactId>platform</artifactId>
    <packaging>pom</packaging>
    <!-- Pamiętaj o zmienieniu też w pozostałych pomach -->
    <version>1.0-SNAPSHOT</version>

    <build>
        <defaultGoal>clean install</defaultGoal>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-shade-plugin</artifactId>
                    <version>2.4.3</version>
                    <executions>
                        <execution>
                            <phase>package</phase>
                            <goals>
                                <goal>shade</goal>
                            </goals>

                            <configuration>
                                <artifactSet>
                                    <excludes>
                                        <exclude>org.spigotmc:spigot-server</exclude>
                                        <exclude>net.md-5:*</exclude>
                                        <exclude>io.netty:*</exclude>
                                        <exclude>com.google.code.gson:gson</exclude>
                                        <exclude>org.yaml:snakeyaml</exclude>
                                        <exclude>com.google.guava:guava</exclude>
                                        <exclude>net.sf.trove4j:trove4j</exclude>
                                    </excludes>
                                </artifactSet>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>